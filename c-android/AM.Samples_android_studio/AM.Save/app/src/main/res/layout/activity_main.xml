<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/editText"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save Key-Value"
        android:id="@+id/bt_saveKeyValue"
        android:layout_below="@id/editText"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save File"
        android:id="@+id/bt_saveFile"
        android:layout_below="@id/bt_saveKeyValue"
      />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save SQLite"
        android:layout_below="@id/bt_saveFile"
        android:id="@+id/bt_saveSQLite" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Read Key-Value"
        android:id="@+id/bt_readKeyValue"
        android:layout_below="@+id/bt_saveSQLite"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Read File"
        android:id="@+id/bt_ReadFile"
        android:layout_below="@+id/bt_readKeyValue"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Read SQLite"
        android:id="@+id/bt_read_SQLite"
        android:layout_below="@+id/bt_ReadFile"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
